<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_create_event"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAppBackground"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create a new event"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                tools:ignore="HardcodedText" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:orientation="vertical"
                android:textColor="@color/white">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginStart="5dp"
                    custom:cardBackgroundColor="@color/colorBackgroundSoft">

                    <TextView
                        android:id="@+id/textView_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:text="Category"
                        android:textColor="@color/colorAppBackground"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spinner_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:entries="@array/category_array"
                        android:prompt="@string/category_prompt" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginStart="5dp"
                    custom:cardBackgroundColor="@color/colorBackgroundSoft">

                    <TextView
                        android:id="@+id/textView_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:text="Type"
                        android:textColor="@color/colorAppBackground"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText" />

                    <Spinner
                        android:id="@+id/spinner_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:entries="@array/type_array"
                        android:gravity="end"
                        android:prompt="@string/type_prompt"
                        android:textAlignment="textEnd" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardview_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginStart="5dp"
                    custom:cardBackgroundColor="@color/colorBackgroundSoft">

                    <TextView
                        android:id="@+id/textView_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:text="Date"
                        android:textColor="@color/colorAppBackground"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/textView_date_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:clickable="true"
                        android:text="@string/date_result"
                        android:textAlignment="textEnd"
                        android:textColor="@color/create_event"
                        android:textSize="16sp"
                        android:textStyle="normal|bold" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginStart="5dp"
                    custom:cardBackgroundColor="@color/colorBackgroundSoft">

                    <TextView
                        android:id="@+id/textView_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:text="Time"
                        android:textColor="@color/colorAppBackground"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/textView_time_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:clickable="true"
                        android:text="@string/time_result"
                        android:textAlignment="textEnd"
                        android:textColor="@color/create_event"
                        android:textSize="16sp"
                        android:textStyle="normal|bold" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginStart="5dp"
                    custom:cardBackgroundColor="@color/colorBackgroundSoft">

                    <TextView
                        android:id="@+id/textView_duration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:text="Duration"
                        android:textColor="@color/colorAppBackground"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/textView_duration_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:text="@string/duration_result"
                        android:textAlignment="textEnd"
                        android:textColor="@color/create_event"
                        android:textSize="16sp"
                        android:textStyle="normal|bold" />

                    <com.appyvet.rangebar.RangeBar
                        android:id="@+id/rangebar_duration"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginLeft="17dp"
                        android:layout_marginRight="17dp"
                        custom:barWeight="3dp"
                        custom:connectingLineColor="@color/colorConnectingLine"
                        custom:connectingLineWeight="3dp"
                        custom:pinColor="@color/colorPin"
                        custom:pinMaxFont="12sp"
                        custom:pinRadius="15sp"
                        custom:rangeBarColor="@color/colorRangebar"
                        custom:selectorColor="@color/colorSelector"
                        custom:selectorSize="8sp"
                        custom:tickEnd="5"
                        custom:tickInterval="0.2"
                        custom:tickStart="0" />
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginStart="5dp"
                    custom:cardBackgroundColor="@color/colorBackgroundSoft">

                    <TextView
                        android:id="@+id/textView_participants"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:text="Participants"
                        android:textColor="@color/colorAppBackground"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/textView_participants_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:text="@string/duration_result"
                        android:textAlignment="textEnd"
                        android:textColor="@color/create_event"
                        android:textSize="16sp"
                        android:textStyle="normal|bold" />

                    <com.appyvet.rangebar.RangeBar
                        android:id="@+id/rangebar_participants"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginLeft="17dp"
                        android:layout_marginRight="17dp"
                        custom:barWeight="3dp"
                        custom:connectingLineColor="@color/colorConnectingLine"
                        custom:connectingLineWeight="3dp"
                        custom:pinColor="@color/colorPin"
                        custom:pinMaxFont="12sp"
                        custom:pinRadius="15sp"
                        custom:rangeBarColor="@color/colorRangebar"
                        custom:selectorColor="@color/colorSelector"
                        custom:selectorSize="8sp"
                        custom:tickEnd="11"
                        custom:tickInterval="1"
                        custom:tickStart="1" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginStart="5dp"
                    custom:cardBackgroundColor="@color/colorBackgroundSoft">

                    <TextView
                        android:id="@+id/textView_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="5dp"
                        android:text="Age range"
                        android:textColor="@color/colorAppBackground"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/textView_age_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="5dp"
                        android:text="@string/age_result"
                        android:textAlignment="textEnd"
                        android:textColor="@color/create_event"
                        android:textSize="16sp"
                        android:textStyle="normal|bold" />

                    <com.appyvet.rangebar.RangeBar
                        android:id="@+id/rangebar_age"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginLeft="17dp"
                        android:layout_marginRight="17dp"
                        custom:barWeight="3dp"
                        custom:connectingLineColor="@color/colorConnectingLine"
                        custom:connectingLineWeight="3dp"
                        custom:pinColor="@color/colorPin"
                        custom:pinMaxFont="12sp"
                        custom:pinRadius="15sp"
                        custom:rangeBarColor="@color/colorRangebar"
                        custom:selectorColor="@color/colorSelector"
                        custom:selectorSize="8sp"
                        custom:tickEnd="70"
                        custom:tickInterval="1"
                        custom:tickStart="10" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginStart="5dp"
                    custom:cardBackgroundColor="@color/colorBackgroundSoft">

                    <TextView
                        android:id="@+id/textView_contribution"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="5dp"
                        android:text="Contribution"
                        android:textColor="@color/colorAppBackground"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/textView_contribution_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="5dp"
                        android:text="@string/contribution_result"
                        android:textAlignment="textEnd"
                        android:textColor="@color/create_event"
                        android:textSize="16sp"
                        android:textStyle="normal|bold" />

                    <com.appyvet.rangebar.RangeBar
                        android:id="@+id/rangebar_contribution"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginLeft="17dp"
                        android:layout_marginRight="17dp"
                        custom:barWeight="3dp"
                        custom:connectingLineColor="@color/colorConnectingLine"
                        custom:connectingLineWeight="3dp"
                        custom:pinColor="@color/colorPin"
                        custom:pinMaxFont="12sp"
                        custom:pinRadius="15sp"
                        custom:rangeBarColor="@color/colorRangebar"
                        custom:selectorColor="@color/colorSelector"
                        custom:selectorSize="8sp"
                        custom:tickEnd="21"
                        custom:tickInterval="1"
                        custom:tickStart="0" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginStart="5dp"
                    custom:cardBackgroundColor="@color/colorBackgroundSoft">

                    <TextView
                        android:id="@+id/textView_level"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="5dp"
                        android:text="Level"
                        android:textColor="@color/colorAppBackground"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText" />

                    <Spinner
                        android:id="@+id/spinner_level"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="5dp"
                        android:entries="@array/level_array"
                        android:prompt="@string/level_prompt"
                        android:textAlignment="textEnd" />
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:cardBackgroundColor="@color/colorBackgroundSoft">

                <LinearLayout
                    android:id="@+id/cardview_placePicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorDark"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/pickPlace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pick a place" />

                    <!--
                                        <TextView
                                            android:id="@+id/textView_place_result"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="12dp"
                                            android:textAlignment="center"
                                            android:text="Place"
                                            android:textColor="@color/colorAppBackground"
                                            android:textSize="16sp" />

                                        <TextView
                                            android:id="@+id/textView_address_result"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="12dp"
                                            android:textColor="@color/colorAppBackground"
                                            android:text="Adress"
                                            android:textSize="16sp"
                                            android:textStyle="normal|bold" />
                    -->
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_create_event"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="24dp"
                android:padding="12dp"
                android:text="Create event" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>