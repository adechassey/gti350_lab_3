<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fitsSystemWindows="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="56dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:weightSum="1">

            <RelativeLayout
                android:id="@+id/profile_name_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingRight="15dp"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView android:id="@+id/profile_name_textView"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:gravity="left"
                    android:text="Name"
                    android:textStyle="normal|bold"
                    android:textSize="16sp"
                    android:fontFamily="Cooper Black"
                    android:layout_weight="0.19"

                    android:layout_alignBaseline="@+id/profile_name_value"
                    android:layout_alignBottom="@+id/profile_name_value"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <View
                    android:id="@+id/border_profile_name"
                    android:layout_width="2dp"
                    android:layout_height="15dp"
                    android:background="@android:color/holo_blue_dark"
                    android:layout_toRightOf="@+id/profile_name_textView"
                    android:layout_toEndOf="@+id/profile_name_textView" />


                <TextView android:id="@+id/profile_name_value"
                    android:text="name"
                    android:fontFamily="Cooper Black"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:gravity="center_horizontal"
                    android:textSize="16sp"
                    android:layout_weight="0.19"

                    android:layout_alignBaseline="@+id/profile_name_Edit"
                    android:layout_alignBottom="@+id/profile_name_Edit"
                    android:layout_toRightOf="@+id/border_profile_name"
                    android:layout_toEndOf="@+id/border_profile_name" />


                <TextView android:id="@+id/profile_name_Edit"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:gravity="center"
                    android:text="Edit"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp"
                    android:background="@drawable/back_button"
                    android:layout_alignTop="@+id/border_profile_name"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/profile_surname_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingRight="15dp"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView android:id="@+id/profile_surname_textView"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:gravity="left"
                    android:text="Surname"
                    android:textStyle="normal|bold"
                    android:textSize="16sp"
                    android:fontFamily="Cooper Black"
                    android:layout_weight="0.19"

                    android:layout_alignBaseline="@+id/profile_surname_value"
                    android:layout_alignBottom="@+id/profile_surname_value"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <View
                    android:id="@+id/border_profile_surname"
                    android:layout_width="2dp"
                    android:layout_height="15dp"
                    android:background="@android:color/holo_blue_dark"
                    android:layout_toRightOf="@+id/profile_surname_textView"
                    android:layout_toEndOf="@+id/profile_surname_textView" />


                <TextView android:id="@+id/profile_surname_value"
                    android:text="surname"
                    android:fontFamily="Cooper Black"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:gravity="center_horizontal"
                    android:textSize="16sp"
                    android:layout_weight="0.19"

                    android:layout_alignBaseline="@+id/profile_surname_Edit"
                    android:layout_alignBottom="@+id/profile_surname_Edit"
                    android:layout_toRightOf="@+id/border_profile_surname"
                    android:layout_toEndOf="@+id/border_profile_surname" />

                <TextView android:id="@+id/profile_surname_Edit"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:gravity="center"
                    android:text="Edit"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp"
                    android:background="@drawable/back_button"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>