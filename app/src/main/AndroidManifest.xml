<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gti350.lab.meetsports">

    <!-- Permissions -->
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Providers -->

        <!-- Global Meta Data -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAKS8p5wWtvFF3LxvVLZjYt3g8aPMFzen4" />

        <activity
            android:name=".Activities.MainActivity"
            android:theme="@style/AppTheme.Dark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Activities.CreateEventActivity"
            android:label="Create an event">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="gti350.lab.meetsports.Activities.MainActivity" />
        </activity>

        <activity
            android:name=".Activities.SignInActivity"
            android:theme="@style/AppTheme.Dark" />

        <activity
            android:name=".Activities.SignUpActivity"
            android:label="Meet Sports"
            android:theme="@style/AppTheme.Dark" />

        <activity
            android:name=".Activities.FindEventActivity"
            android:label="Find an event">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="gti350.lab.meetsports.Activities.MainActivity" />
        </activity>

    </application>
</manifest>